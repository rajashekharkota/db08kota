extends layout

block content
    h1= title
    - var list = results 
    div 
        a(class="btn btn-info", style="margin-right:5px", href=`/panda/create`) Add New Costume

    table(class="table table-stripped table-bordered")
        thead 
            tr 
                td Costume Type
                td Size 
                td Cost
                td Action
        tbody 
            each item in list 
                tr
                    td #{item.costume_type}
                    td #{item.size}
                    td #{item.cost}
                    td 
                        div(class="d-flex ")
                            a(class="btn btn-primary", style="margin-right:5px", href=`/panda/detail?id=${item.id}`) Details
                            a(class="btn btn-warning", style="margin-right:5px", href=`/panda/update?id=${item.id}`) Edit 
                            a(class="btn btn-danger", style="margin-right:5px", href=`/panda/delete?id=${item.id}`) Delete